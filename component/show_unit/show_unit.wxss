/* component/show_unit/show_unit.wxss */

@font-face {
  font-family: 'iconfont'; /* project id 740750 */
  src: url('//at.alicdn.com/t/font_740750_8i4srovaidw.eot');
  src: url('//at.alicdn.com/t/font_740750_8i4srovaidw.eot?#iefix') format('embedded-opentype'),
         url('//at.alicdn.com/t/font_740750_8i4srovaidw.woff') format('woff'),
         url('//at.alicdn.com/t/font_740750_8i4srovaidw.ttf') format('truetype'),
         url('//at.alicdn.com/t/font_740750_8i4srovaidw.svg#iconfont') format('svg');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 22rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}

.caret-right:before {
  font-size: 22rpx;
  color: #f25d8e;
  content: '\e67d';
}

.tab-content-children {
  max-width: 750rpx;
  height: 267rpx;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  /* box-shadow: 0rpx 0rpx 12rpx 6rpx #cccccc; */
  box-shadow: 0rpx 0rpx 7rpx 2rpx #ccc;
  border-radius: 15rpx;
}

.info-main {
  display: flex;
  flex-direction: row;
}

.info-text {
  height: auto;
  width: 100%;
  margin: auto auto;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.info-right {
  width: 460rpx;
  height: 155rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.info-head {
  display: flex;
  text-align: center;
}

.info-name {
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
  color: #f25d8e;
  margin-right: 27rpx;
}

.info-head .info-identification {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 7rpx;
  margin-bottom: 10rpx;
}

.info-identification image {
  width: 100%;
  height: 100%;
}

.info-basic {
  color: #777;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}

.info-basic text {
  padding: 0 10rpx;
  border-left: 1rpx solid #f5f5f5;
}
.info-basic text:first-child {
  padding-left: 0;
  border-left:none;
}

.info-more {
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  color: #f25d8e;
}

.info-more text {
  padding: 0rpx 9rpx;
  margin-right: 9rpx;
  border: 1rpx solid #f25d8e;
  border-radius: 25rpx;


    height: auto;
  max-width: 33%;
  /* margin: auto auto; */
