  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.info-left {
  height: 155rpx;
}

.info-left-image {
  /* width:217rpx;
  height:155rpx;
