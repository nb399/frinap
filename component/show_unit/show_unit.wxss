}

.info-sign {
  color: #777;
  margin-top: 37rpx;
}


.more-sign {
  margin-top: 10rpx;
}

.more-sign .count {
  position: absolute;
  left: 580rpx;
  color: #b8b6b6;
  display: flex;
}
