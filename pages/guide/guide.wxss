/* pages/guide/guide.wxss */
@import "../../app.wxss";

.picker-indicator {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
}

.section-top {
  width: 100%;
  height: 300rpx;
  background: linear-gradient(#f25d8e, #f97e80);
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.section-top image {
  width: 44rpx;
  height: 20rpx;
}

.section-main {
  padding-top: 60rpx;
  position: relative;
}

.other-login {
  position: fixed;
  bottom: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #f97e80;
  width: 100%;
  height: 50rpx;
}

.box-sex {
  display: flex;
  width: 85%;
  margin: 50rpx auto;
  align-items: center;
  justify-content: space-around;
}

.sex-text {
  border: 1rpx solid #f25d8e;
  line-height: 70rpx;
  text-align: center;
  height: 70rpx;
  width: 70rpx;
  font-size: 30rpx;
  border-radius: 100rpx;
  margin-top: 50rpx;
}

.button-back {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

.sex-main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.sex-main image {
  width: 200rpx;
  height: 200rpx;
}

.button-choose {
  width: 450rpx;
  height: 70rpx;
  border-radius: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
  margin: 50rpx auto;
  border: 1rpx solid #f25d8e;
}

.choosed {
  color: #fff;
  background: linear-gradient(#f25d8e, #f97e80);
}

.button-next {
  width: 450rpx;
  height: 70rpx;
  border-radius: 70rpx;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  font-size: 30rpx;
  margin: 150rpx auto;
  background: linear-gradient(#f25d8e, #f97e80);
}

/*遮罩*/

.pink {
  color: #f25d8e;
  margin: 0 10rpx;
}

.zan-popup__mask {
  background-color: rgba(0, 0, 0, 0.5);
}

.popup_container {
  width: 636rpx;
  height: 466rpx;
  color: #000;
  border-radius: 20rpx;
  position: relative;
  top: -360rpx;
}

.bg_popup {
  width: 636rpx;
  height: 466rpx;
}

.popup-main {
  color: #fff;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 600rpx;
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  align-items: center;
  justify-content: space-between;
  height: 400rpx;
}

.content-head {
  font-size: 50rpx;
}

.content-center {
 padding: 0 30rpx;
  height: 70rpx;
  background: #fff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  font-size: 34rpx;
}

.content-center image {
  width: 70rpx;
  height: 58rpx;
}

.content-footer {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.content-footer icon {
  position: relative;
  bottom: -120rpx;
}
