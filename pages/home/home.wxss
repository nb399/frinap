  height: 25rpx;
  margin-right: 10rpx;
}
.nomore-line{
  text-align: center;
  color: #f25d8e
}
/*loading*/
.canvas {
  align-items: center;
  background: #eeeeee;
  border-radius: 50%;
  box-shadow: 0 5px 20px rgba(0,0,0,0.2);
  display: flex;
  height: 10em;
  justify-content: center;
  margin: 1em 1em 2em 1em;
  width: 10em;
}
.canvas1{
  margin: 0 auto;
  margin-top: 40vh;
  width: 117rpx;
}

/* Spinner 1 starts here */
.spinner1 {
  align-items:center;
  border:2rpx solid transparent;
  border-top:2rpx solid rgba(242, 93, 142, 0.23);
  border-right:2rpx solid rgba(242, 93, 142, 0.21);
  border-radius:100%;
  display:flex;
  justify-content:center;
}

.spinnerMax {
  animation: spinnerOne 1.5s linear infinite;
  height: 3em;
  width: 3em;
}

.spinnerMid {
  animation: spinnerOne 2.5s linear infinite;
  height: 2em;
  width: 2em;
}

.spinnerMin {
  animation: spinnerOne 2.5s linear infinite;
  height: 1em;
  width: 1em;
}


@keyframes spinnerOne {
  0% {
    transform: rotate(0deg)
  }
  100% {
    transform: rotate(360deg)
  }
}
/* Spinner 1 ends here */
/* loadingmore */
.canvas4{
  text-align: center;
  margin-bottom: 27rpx;
}
.spinner4 {
  animation: spinnerFour 1s linear infinite;
  border:solid 7rpx transparent;
  border-top:solid 7rpx rgba(242, 93, 142, 0.23);
  border-radius:100%;
  width:1em;
  height:1em;
  border-right:solid 7rpx rgba(242, 93, 142, 0.23);
  margin: 0 auto;
}
.loadingText{
  font-size:24rpx;
  position:relative;
  top:-50rpx;
  right:-90rpx;
}

@keyframes spinnerFour {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}