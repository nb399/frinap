/* pages/mine/collection/collection.wxss */
page {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
}
.main{
  padding: 20rpx;
}
.tab-nothing{
  text-align: center;
  color: #777;
}
.tab-content{
  max-width: 750rpx;
  background: #F6F6F6;
  font-size: 28rpx;
}
.tab-content-children{
  max-width: 750rpx;
  height: auto;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  /* box-shadow: 0rpx 0rpx 12rpx 6rpx #cccccc; */
  box-shadow: 0rpx 0rpx 7rpx 2rpx #cccccc;
  border-radius: 15rpx;
  position: relative;
}
.cover-img{
  position: absolute;
  top: 0;
  left: 0;
  height: 80rpx;
  width: 80rpx;
}
.info-main{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 130rpx;
}
.info-right{
  width: 460rpx;
  height: 120rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content:space-around;

}

 .info-collect image{
 width:36rpx;
height:36rpx;
position: absolute;
top: 0;
right: 0;
}
.info-head{
  display: flex;
  text-align: center;
}
.user-color{
  color:#7E7CF7;
}
.matcher-color{
  color:#f25d8e;
}
.info-name{
  font-size: 30rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  margin-bottom: 10rpx;
  /* color: #f25d8e; */
  margin-right: 27rpx;
  width: 100%;
}
.info-head .info-identification{
  width: 30rpx;
  height: 30rpx;
  position:relative;
  top:7rpx;
  margin-bottom: 10rpx;
}
.info-identification image{
  width: 100%;
  height: 100%;
}
.info-basic{
  color: #777;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}
.info-basic text{
  margin-right: 20rpx;
}
.info-more{
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  color: #f25d8e;
}
.info-more text {
  padding: 0rpx 9rpx;
  margin-right: 9rpx;
  border: 1rpx solid #f25d8e;
  border-radius: 25rpx;
    height: auto;
  max-width: 33%;
  /* margin: auto auto; */
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.info-left{
  height: 130rpx;
   margin-left: 18rpx; 
}
.info-left-image{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  z-index: 99;
}
.info-sign{
  color: #777;
  font-size: 26rpx;
  width:96%;
margin:10rpx auto 0 auto;

}
.info-sign text{
  margin: 4rpx 0 6rpx 0;
  /* font-size: 20rpx; */
  color: #a2a2a2;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.load-more{
  color: #cdcdcd;
  text-align: center;
  margin: 15rpx 0;
}
.more-sign{
  margin-top: 10rpx;
}
.more-sign .fa-caret-right{
  color:#f25d8e;
  font-size: 31rpx;
}
.more-sign .count{
  position: absolute;
  left: 580rpx;
  color: #b8b6b6;
  display: flex;
}
.count view{
  height: 32rpx;
}
.count .icon{
  text-align: center;
  font-size: 32rpx;
  line-height:32rpx;
  margin-right: 4rpx;
}
.count .count_number{
  text-align: center;
  font-size: 24rpx;
}
.is-loading{
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}

/*loading*/
.canvas {
  align-items: center;
  background: #eeeeee;
  border-radius: 50%;
  box-shadow: 0 5px 20px rgba(0,0,0,0.2);
  display: flex;
  height: 10em;
  justify-content: center;
  margin: 1em 1em 2em 1em;
  width: 10em;
}
.canvas1{
  margin: 0 auto;
  margin-top: 40vh;
  width: 117rpx;
}

/* Spinner 1 starts here */
.spinner1 {
  align-items:center;
  border:2rpx solid transparent;
  border-top:2rpx solid rgba(242, 93, 142, 0.23);
  border-right:2rpx solid rgba(242, 93, 142, 0.21);
  border-radius:100%;
  display:flex;
  justify-content:center;
}

.spinnerMax {
  animation: spinnerOne 1.5s linear infinite;
  height: 3em;
  width: 3em;
}

.spinnerMid {
  animation: spinnerOne 2.5s linear infinite;
  height: 2em;
  width: 2em;
}

.spinnerMin {
  animation: spinnerOne 2.5s linear infinite;
  height: 1em;
  width: 1em;
}


@keyframes spinnerOne {
  0% {
    transform: rotate(0deg)
  }
  100% {
    transform: rotate(360deg)
  }
}
/* Spinner 1 ends here */
/* loadingmore */
.canvas4{
  text-align: center;
  margin-bottom: 27rpx;
}
.spinner4 {
  animation: spinnerFour 1s linear infinite;
  border:solid 7rpx transparent;
  border-top:solid 7rpx rgba(242, 93, 142, 0.23);
  border-radius:100%;
  width:1em;
  height:1em;
  border-right:solid 7rpx rgba(242, 93, 142, 0.23);
  margin: 0 auto;
}
.loadingText{
  font-size:24rpx;
  position:relative;
  top:-50rpx;
  right:-90rpx;
}

@keyframes spinnerFour {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}