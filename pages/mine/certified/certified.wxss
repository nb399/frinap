/* pages/mine/certified/certified.wxss */

.section-photo {
  display: flex;
  justify-content: space-around;
  margin: 30rpx;
}
.box-photo{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
}
.box-photo image {
  width: 300rpx;
  height: 200rpx;
}
.section-tips{
  border: 1rpx dashed #f5f5f5;
  background: #eaeaea;
  font-size: 30rpx;
  padding: 10rpx;
  color: #868686;
  display: flex;
  flex-direction: column;
  width: 90%;
  border-radius: 6rpx;
  margin: 40rpx auto;
}
.text-tips{
  font-size: 24rpx;
  color: #a1a1a1;
  line-height: 40rpx;
}
.grey-bar{
  width: 100%;
  height: 10rpx;
  background: #eaeaea;
}