/* pages/mine/charge/charge.wxss */
.container{
  width: 100%;
  height: 100vh;
  font-size: 37rpx;
  background-color: #F6F6F6;
}
.num{
  color: #f25d8e;
}
.tips{
  padding: 40rpx 27rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 10rpx rgba(255, 0, 130, 0.1);
}
.tips .tips-title{

}
.tips .tips-placeholder{
  font-size: 24rpx; 
  color: #777;
}
.charge-item{
  width:95%;
  margin:25rpx auto;
  padding-bottom: 37rpx;
  background-color: #fff;
  border-radius: 7rpx;
  box-shadow: 0rpx 1rpx 10rpx rgba(255, 0, 130, 0.1);
}
.charge-item image{
  width: 77rpx;
  height: 77rpx;
}
.charge-item .item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 142rpx;
  border-bottom: solid 1rpx #eee;
}
.item-left{
  display: flex;
  align-items: center;
  margin-left: 17rpx;
}
.item-left image{
  margin-right: 17rpx;
}
.item-right{  
  display: flex;
  align-items: center;
  margin-right: 17rpx;
}
.item-right text{
  margin-right: 47rpx;
}
.item-right zan-icon{
  color: #808080;
  font-size: 45rpx;
}
.optBox{
  width:100%;
  margin-top:24rpx;
}
.optBox .buyBtn{
    width: 95%;
    margin: 0 auto;
  background-image: linear-gradient(to left,#f87e7f,#f25d8e);
    color: #fff;
}
.color-pink{
  color: #f25d8e !important;
}
.color-green{
  color: #1dc8b1 !important;
}
