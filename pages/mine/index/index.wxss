/* pages/mine/index/index.wxss */
zan-capsule{
  display: flex;
}
.page{
   min-height: 100vh;
   overflow: hidden;
}
.btn_hover{
  background-color: #eee;
}

.container {
  font-size: 28rpx;
  height: 100vh;
  color: #777;
}
.header{
  display: flex;
  flex-direction: row;
}
.user-info {
  width: 100%;  
  padding: 17rpx 0 27rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  background-color: #fff;
  border-bottom: 3rpx solid #eee;
}
.info{
  margin-left: 20rpx;
  width: 100%;
  margin-right: 50rpx;
  display: flex;
  justify-content: space-between;
}
.info view{
  text-align: center;
}
.info .arrow{
  width: 28rpx;
  height: 28rpx;
}
.info-title{
  display: flex;
  flex-direction: row;
} 
.label{
  position: relative;
}
.item1{
  margin-bottom: 20rpx;
 
}
.item1 > .label{
  border:2rpx solid #7f7cf7;
  padding: 7rpx 7rpx 7rpx 20rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  width:  fit-content;
  color: #7f7cf7;
}
.label-bottom{
  margin-top: 32rpx;
}
.item1 image{
  width: 48rpx;
  height: 48rpx;
}
.item2{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item2 image{
  width: 77rpx;
  height: 77rpx;
}
.line{
  width:95rpx;
  border-top:solid 2rpx #eee;
  height:15rpx;
  margin-top:10rpx;
}

.userHead {
  width: 310rpx;
  height: 200rpx;
  position: relative;
}
.userHead .avatarBox{
  width: 177rpx;
  height: 177rpx;
  overflow: hidden;
  border-radius: 50%;
}
.userHead .avatar{
  width: 100%;
  height: 100%;
}
.userHead .identify{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top:-3rpx;
  left:3rpx;
}

.mySetting {
  width: 100%;
  padding: 0rpx 27rpx 27rpx 27rpx;
  box-sizing: border-box;
}

.mySetting .mySetting-in {
  width: 100%;
  padding: 0 15rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.mine {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 100rpx;
  border-bottom: 1px solid #eee;
}
/* .mine:last-child {
  border: none;
} */
.mine-in {
  display: flex;
  align-items: center;
}
.tubiao {
  /* width: 42rpx; */
  width: 20rpx;
  height: 42rpx;
  /* margin-right: 20rpx; */
}
.arrow {
  width: 28rpx;
  height: 28rpx;
}
.arrow1{
  margin-left: 9rpx;
}
.arrow2{
  margin-left: 9rpx;
}
.login{
  position: absolute;
  bottom: 100rpx;
  width: 100%;
}
.login button{
  font-size: 15px;
  width: 347rpx;
  color: #fff;
  background-image: linear-gradient(to left,#f87e7f,#f25d8e);
  border-radius: 57rpx;
}

/* 未登录页面 */
.login-box{
  width: 100%;
  height: 100vh;
  text-align: center;
  background-color: #eee;
}
.login-box .logo{
  background-color: #fff;
  height:27vh;
}
.login-box image{
  width:217rpx;
  position: relative;
  top: -77rpx;
}
.login-box .btnbox{
  margin-top: 20rpx;
  background-color: #fff;
  height: 100%;
}
.login-box .btnbox .box{
  padding-top: 40vh;
}
.login-box .btnbox .box button{
  width: 650rpx;
  margin-bottom: 27rpx;
  color: #fff;
  font-size: 15px;
}
.login-box .btnbox .box .tel{
  background-image: linear-gradient(to left,#f87e7f,#f25d8e);
}
.login-box .btnbox .box .weixin{
  background-color: #f0f0f0;
  border:none;
  color:#000;
}

/* 登录遮罩 */
.popup_container{
  width:577rpx;
  height:377rpx;
  color: #000;
  background-color:#fff;
}
.popup-header{
  height: 77rpx;
  background-color: #eee;
  line-height: 77rpx;
}
.popup-header text{
  font-size:29rpx;
}
.popup-body{
  font-size: 26rpx;
  padding: 10rpx;
}
.popup-body .mobile-num{
  display:flex;
  flex-direction:row;
  height:61rpx;
  margin-top:27rpx;
  border-bottom:1rpx solid #eee;
  padding-bottom:17rpx;
  justify-content: space-around;
  line-height: 78rpx;
}
.popup-body .mobile-num button{
  margin-right: 0rpx;
}
.popup-body text{
  width: 90rpx;
}
.popup-body .code{
  display: flex;
  flex-direction: row;
  justify-content: space-start;
}
.popup-body button{
  font-size: 24rpx;
}
.popup-footer{
  position: absolute;
  width: 100%;
  bottom: 0rpx;
  height: 77rpx;
  background-color: #eee;
  display: flex;
  flex-direction: row;
  line-height: 77rpx;
}
.popup-footer view{
  width: 50%;
  color: #000;
  border-radius: 0rpx;
  font-size: 24rpx;
}
.popup-footer .complete{
  color: #fff;
  background-image: linear-gradient(to left,#f87e7f,#f25d8e);
}
.popup-other{
  position: absolute;
   bottom: -170rpx;
   background-image: linear-gradient(to left,#f87e7f,#f25d8e);
   color: #fff;
   height: 60rpx;
   width: 200rpx;
   line-height: 60rpx;
   border-radius:30rpx;
   left: 50%;
   font-size: 29rpx;
   transform: translateX(-50%)
}

/*上传遮罩*/
.uploadContainer{
  width: 750rpx;
  height: 575rpx;
  background-color: #f6f6f9;
  text-align: center;
  color: #000;
}
.uploadContainer .title{
  font-size: 34rpx;
  height: 50rpx;
}
.uploadContainer .tips{
  color: #777;
  height:70rpx;
  line-height:50rpx;
}
.uploadContainer .defaultAvatar{
  display: flex;
  justify-content: space-between;
  width: 80%;
  margin: 0 auto;
  padding-bottom: 17rpx;
}
.uploadContainer .defaultAvatar view{
  position: relative;
}
.fa-check-circle{
  position: absolute;
  right: 2rpx;
  color: #f25d8e;
  top:2rpx;
}
.selected-border{
  border: solid 2rpx #f25d8e;
}
.uploadContainer .defaultAvatar image{
  width: 127rpx;
  height: 127rpx;
  border-radius: 50%;
}
.uploadContainer .method1{
  height:97rpx;
  border-bottom:solid 1rpx #dadada;
  border-top: solid 1rpx #dadada;
  line-height:97rpx;
}
.uploadContainer .method2{
  height:97rpx;
  line-height:97rpx;
}
.uploadContainer .distance{
  width: 100%;
  height: 20rpx;
  background-color: #efeff4;
}
.uploadContainer .cancalBtn{
  height:97rpx;
  line-height:97rpx;
}